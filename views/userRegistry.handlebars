<div class="container3">
  <div class="row">
    <div class="col-lg-12">
      <a class="back-home-btn" href="/">‚Üê Back To Home</a>
      <div class="text-center">
        <h2 class="reg-title">Gift Registry</h2>
        <p>View registry items below.</p>
      </div>
      <div class="card user-reg-card mt-4 ">
        <div class="card-body">
          <h3 class="card-title text-center">Registry Items</h3>
            <div class="table-responsive">
              <table class="table-striped">
                <thead>
                  <tr class="table-header">
                    <th>Product ID</th>
                    <th>Product Name</th>
                    <th>Store Name</th>
                    <th>Price</th>
                    <th>Purchase Item</th>
                  </tr>
                </thead>
                <tbody>
                {{#each Products}}
                {{#unless isPurchased}}
                <tr>
                  <td>{{this.id}}</td>
                  <td>{{this.productName}}</td>
                  <td>{{this.store}}</td>
                  <td>$ {{this.price}}</td>
                  <td>
                    {{!-- <button data-id="{{this.id}}" class="update-btn btn-success"><i class="fa fa-gift"></i></button> --}}
                    <a href="" class="update-btn btn-dark" data-toggle="modal" data-target="#modalUpdateRegistry"><i class="fa fa-gift"></i></a>
                  </td>
                </tr>
                {{/unless}}
                {{/each}}
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
</div>

{{!--Modal/Update --}}
<div class="modal fade" id="modalUpdateRegistry" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header text-center">
        <h4 class="modal-title w-100 font-weight-bold">Card Info</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body mx-3">
        <h5>Enter payment info</h5>
          <div class="form-row">
            <div class="col">
              <!-- First name -->
              <div class="md-form mb-5">
                <i class="fa fa-user prefix grey-text"></i>
                <input placeholder="First name" type="text" id="user-first-name" class="form-control">
                <label for="user-firstname"></label>
              </div>
            </div>
            <div class="col">
              <!-- Last name -->
              <div class="md-form">
                <input placeholder="Last-name" type="text" id="user-last-name" class="form-control">
                <label for="user-lastname"></label>
              </div>
            </div>
          </div>
        {{!-- Email --}}
        <div class="md-form mb-5">
          <i class="fa fa-envelope prefix grey-text"></i>
          <input placeholder="Your email" type="email" id="pay-email" class="form-control validate">
          <label data-error="wrong" data-success="right" for="email"></label>
        </div>
        {{!-- Card Number --}}
        <div class="md-form mb-5">
          <i class="fa fa-card prefix grey-text"></i>
          <input placeholder="Card number" type="number" id="card-number" class="form-control validate">
          <label data-error="wrong" data-success="right" for="payment"></label>
        </div>
        {{!-- MM/YY --}}
        <div class="md-form mb-5">
          <i class="fa fa-calendar prefix grey-text"></i>
          <input placeholder="MM/YY" type="number" id="expiration" class="form-control validate">
          <label data-error="wrong" data-success="right" for="email"></label>
        </div>
        {{!-- CVC --}}
        <div class="md-form mb-5">
          <i class="fa fa-lock prefix grey-text"></i>
          <input placeholder="CVC" type="number" id="cvc" class="form-control validate">
          <label data-error="wrong" data-success="right" for="cvc"></label>
        </div>
        {{!-- Remember me --}}
        <div class="md-form mb-5">
          <i class="fa fa-lock prefix grey-text"></i>
          <input type="checkbox" id="cvc" class="form-check-input">
          <label class="font-weight-bold form-check-label" for="checkbox624"></label>
        </div>
      </div>
      <div class="modal-footer d-flex justify-content-center">
        <button class="btn btn-dark" id="pay">Purchase Now</button>
      </div>
    </div>
  </div>
</div>


